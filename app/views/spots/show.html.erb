<p id="notice"><%= notice %></p>

<h2> Details about <%= @spot.name%> </h2>
<div class="container" , style="max-width: 2000px">
  <div class="row">
    <div class="col">

<p>
  <strong>Name:</strong>
  <%= @spot.name %>
</p>

<br>

<p>
  <strong>Location:</strong>
  <%= @spot.location %>
</p>
<br>

<p>
  <strong>Coordinates:</strong>
  <%= @spot.latitude %> <%= @spot.longitude %>
</p>

<br>


<p>
  <strong>Description:</strong>
  <%= @spot.description %>
</p>

<br>

<p>
  <strong>Uploaded by:</strong>
  <%= @spot.user.name %>
</p>
</div>

<div class="col">
  <div style="width:500px; height:400px">
  <% if @spot.image.attached? %>
    <%= image_tag(@spot.image , style:'width:100%')%>
  <% else %>
    <%=image_tag("no-image.png")%>
  <% end %>
  </div>
</div>
<div class="col">


<iframe width="500" height="400" frameborder="0" style="border:0"
 src="https://www.google.com/maps/embed/v1/place?key=AIzaSyBX4XdppP2bZW2VR0LYuKlvj1NefnEz61Y&zoom=17&q=<%=@spot.latitude%>+<%=@spot.longitude%>"
 allowfullscreen>
</iframe>
</div>
</div>
</div>

<% if current_user.id == @spot.user_id || current_user.admin %>
<p>
  <%= link_to 'Edit', edit_spot_path(@spot) %>  |

  <%= link_to 'Delete',spot_path(@spot) , :method => :delete %> |



<%end%>

<%= link_to 'Back', spots_path %> 

</p>
